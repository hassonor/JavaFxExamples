<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>


<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.drawlines.DrawLinesController">
   <children>
      <BorderPane prefHeight="413.0" prefWidth="600.0">
         <top>
            <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
              <items>
                <Button mnemonicParsing="false" onAction="#drawLinesButtonPressed" text="Draw Lines" />
              </items>
                <items>
                    <Button mnemonicParsing="false" onAction="#drawXButtonPressed" text="Draw X" />
                </items>
            </ToolBar>
         </top>
         <center>
            <Canvas fx:id="canvas" height="300.0" width="300.0" BorderPane.alignment="CENTER" />
         </center>
      </BorderPane>
   </children>
</VBox>
